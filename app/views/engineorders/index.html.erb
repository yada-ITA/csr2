    </tr>
  </thead>

  <tbody>
    <% @engineorders.each do |engineorder| %>
      <tr>
        <td><%= Businessstatus.find(engineorder.businessstatus_id).name unless engineorder.businessstatus_id.nil? %></td>
        <td><%= engineorder.issue_no %></td>
        <td><%= engineorder.inquiry_date %></td>
        <td><%= Company.find(engineorder.branch_id).name unless engineorder.branch_id.nil? %></td>
        <td><%= User.find(engineorder.salesman_id).name unless engineorder.salesman_id.nil? %></td>
        <td><%= Company.find(engineorder.install_place_id).name unless engineorder.install_place_id.nil? %></td>
        <td><%= engineorder.orderer %></td>
