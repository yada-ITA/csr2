        <td><%= engineorder.sending_comment %></td>
 -->       
        <td><%= engineorder.desirable_delivery_date %></td>
        <td><%= User.find(engineorder.registered_user_id).name unless engineorder.registered_user_id.nil? %></td>

        <td><%= link_to '受注登録', ordered_path(engineorder) %></td>
        <td><%= link_to '引当登録', allocated_path(engineorder) %></td>
        <td><%= link_to '出荷登録', shipped_path(engineorder) %></td>
        <td>.....</td>

        <td><%= link_to '詳細', engineorder %></td>
        <td><%= link_to '修正(仮)', edit_engineorder_path(engineorder) %></td>
        <td><%= link_to '削除(仮)', engineorder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

