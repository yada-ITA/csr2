<h1>整備依頼</h1>

<%= form_for(@repair) do |f| %>
  <% if @repair.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@repair.errors.count, "error") %> prohibited this repair from being saved:</h2>
      <ul>
      <% @repair.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= render 'engineInfo' %>

  <div class="field">
    <%= f.label :issue_no %><br>
    <%= f.text_field :issue_no, :disabled=>'true' %>
  </div>
  <div class="field">
    <%= f.label :issue_date %><br>
    <%= f.text_field :issue_date, :disabled=>'true' %>
  </div>
  <div class="field">
    <%= f.label :time_of_running %><br>
    <%= f.number_field :time_of_running %>
  </div>
  <div class="field">
    <%= f.label :day_of_test %><br>
    <%= f.date_select :day_of_test, :use_month_numbers => true, :start_year => Engine.start_year %>
  </div>
  
  <div class="field">
    <%= label_tag t('views.label_runningyear') %><br>
    <%= @repair.calcRunningYear %>
  </div>

  <div class="field">
    <%= f.label :arrive_date %><br>
    <%=  f.date_select :arrive_date, :use_month_numbers => true %>
  </div>

  <div class="field">
    <%= f.label :order_no %><br>
    <%= f.text_field :order_no %>
  </div>
  <div class="field">
    <%= f.label :order_date %><br>
    <%= f.date_select :order_date, :use_month_numbers => true %>
  </div>
  <div class="field">
    <%= f.label :construction_no %><br>
    <%= f.text_field :construction_no %>
  </div>
  <div class="field">
    <%= f.label :desirable_finish_date %><br>
    <%= f.date_select :desirable_finish_date, :use_month_numbers => true %>
  </div>

  <% if current_user.yesOffice? %>
  <div class="actions">
    <%= f.submit  :value => t('views.buttun_repairOrdered') %>
  </div>
  <% end %>

<% end %>

<%= link_to 'Back', repairs_path %>
