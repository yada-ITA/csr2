<h1>整備開始</h1>

<%= form_for(@repair) do |f| %>
  <% if @repair.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@repair.errors.count, "error") %> prohibited this repair from being saved:</h2>

      <ul>
      <% @repair.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'engineInfo' %>
  <% disabled_data = getDisabled_RepairStarted %>

<br>

  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date, :use_month_numbers => true %>
  </div>
  <div class="field">
    <%= f.label :estimated_finish_date %><br>
    <%= f.date_select :estimated_finish_date, :use_month_numbers => true %>
  </div>
  <div class="field">
    <%= f.label :before_comment %><br>
    <%= f.text_area :before_comment %>
  </div>
  <div class="actions">
    <%= f.submit  :value => t('views.buttun_repairStarted') %>
  </div>
  <%= link_to 'Back', repairs_path %>
<hr>
  <div class="field">
    <%= f.label :issue_no %><br>
    <%= f.text_field :issue_no, :disabled=> true %>
  </div>
  <div class="field">
    <%= f.label :issue_date %><br>
    <%= f.text_field :issue_date, :disabled=> true %>
  </div>
  
  <div class="field">
    <%= f.label :order_no %><br>
    <%= f.text_field :order_no, :use_month_numbers => true, :disabled=> disabled_data[:order_no] %>
  </div>
  <div class="field">
    <%= f.label :order_date %><br>
    <%= f.date_select :order_date, :use_month_numbers => true, :disabled=> disabled_data[:order_date] %>
  </div>
  <div class="field">
    <%= f.label :construction_no %><br>
    <%= f.text_field :construction_no, :disabled=> disabled_data[:construction_no] %>
  </div>
  <div class="field">
    <%= f.label :desirable_finish_date %><br>
    <%= f.date_select :desirable_finish_date, :use_month_numbers => true, :disabled=>disabled_data[:desirable_finish_date] %>
  </div>

<% end %>
